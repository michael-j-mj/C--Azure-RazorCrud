@page
@model RazorCrud.Pages.Categories.IndexModel
@{
}


<div class="container p-3">
    <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"> Category List</h2>
            </div>
            <div class="col-6">
                <a asp-page="create" class="btn btn-primary"> <i class="bi bi-pencil-square">&nbsp</i>Create New Category</a>
            </div>
    </div>
     <br /><br/>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th> 
                <th>Display Order</th>
            </tr>
         </thead>
         <tbody>
            @foreach(var category in Model.Categories)
            {
                <tr>
                     <td width="50%"> @category.Name</td>
                     <td width="30%"> @category.DisplayOrder</td>
                     <div class="w-75 btn-group" role="group"> 
                     <td> <a asp-page="Edit" asp-route-id= "@category.Id" class="btn btn-primary mx-2"><i class="bi bi-plus-square"></i>&nbsp;</a></td>
                     <td> <a asp-page="Delete" asp-route-id= "@category.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a></td>
                     </div>
                </tr>
            }

 
         </tbody>
     </table>
</div>

